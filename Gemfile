gem "nokogiri", ">= 1.11.0.rc4"			# html-proofer requirement
gem 'ffi'					# html-proofer requirement
gem 'html-proofer'
gem 'travis'
gem 'json', '2.3.1'
gem 'jekyll', ">=3.7", "< 4.0"			#jekyll requires ruby 2.4 which is not on Mojave
gem 'launchy', '2.4.3'

# If you have any plugins, put them here!
